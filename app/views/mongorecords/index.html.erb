<p id="notice"><%= notice %></p>

<h1>Listing Mongorecords</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mongorecords.each do |mongorecord| %>
      <tr>
        <td><%= link_to 'Show', mongorecord %></td>
        <td><%= link_to 'Edit', edit_mongorecord_path(mongorecord) %></td>
        <td><%= link_to 'Destroy', mongorecord, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

